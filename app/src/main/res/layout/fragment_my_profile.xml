


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#bebebe"
    android:layout_height="match_parent"
    tools:context="com.vardhaman.jewelapp.Fragment.MyProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:siBorderWidth="2dp"
            android:src="@drawable/ic_action_image"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            app:siBorderColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profile_imageview"
            app:siBorderWidth="2dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            app:siBorderColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About me"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/textcolor"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name "

            android:textColor="#000000"

            android:id="@+id/etfirst_name"
            android:background="@drawable/edit_text_whitbg_blueborder"

            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"

            android:textColor="#000000"

            android:id="@+id/etlast_name"
            android:background="@drawable/edit_text_whitbg_blueborder"

            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"

            android:textColor="#000000"

            android:id="@+id/etcity"
            android:background="@drawable/edit_text_whitbg_blueborder"

            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"

            android:textColor="#000000"

            android:id="@+id/etstate"
            android:background="@drawable/edit_text_whitbg_blueborder"

            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"

            android:textColor="#000000"

            android:id="@+id/etcountry"
            android:background="@drawable/edit_text_whitbg_blueborder"

            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Detail"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/textcolor"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"

            android:textColor="#000000"

            android:id="@+id/etmobileno"
            android:background="@drawable/edit_text_whitbg_blueborder"

            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"

            android:textColor="#000000"

            android:id="@+id/etemail"
            android:background="@drawable/edit_text_whitbg_blueborder"

            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Website"

            android:textColor="#000000"

            android:id="@+id/etwebsite"
            android:background="@drawable/edit_text_whitbg_blueborder"

            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textColor="@color/textcolor"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#000000"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:siBorderWidth="2dp"
                android:src="@drawable/ic_action_image"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                app:siBorderColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/profile_imageview2"
                app:siBorderWidth="2dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                app:siBorderColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_margin="10dp"
            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Business Name"

                android:textColor="#000000"

                android:id="@+id/etbusinessname"
                android:background="@drawable/edit_text_whitbg_blueborder"

                android:layout_centerHorizontal="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_margin="10dp"
            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Position"

                android:textColor="#000000"

                android:id="@+id/etposition"
                android:background="@drawable/edit_text_whitbg_blueborder"

                android:layout_centerHorizontal="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_margin="10dp"
            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MarketPlace Title"

                android:textColor="#000000"

                android:id="@+id/etmarket"
                android:background="@drawable/edit_text_whitbg_blueborder"

                android:layout_centerHorizontal="true" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:id="@+id/bupdate"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/corner_button"/>

    </LinearLayout>
</ScrollView>
